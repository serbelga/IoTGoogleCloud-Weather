<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/blue900</item>
        <item name="colorOnPrimaryEmphasisMedium">@color/blue900mediumEmphasis</item>
        <item name="android:statusBarColor">@color/whiteDark</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceEmphasisMedium">@color/gray</item>

        <item name="textAppearanceHeadline3">@style/Headline3</item>
        <item name="textAppearanceHeadline5">@style/Headline5</item>
        <item name="textAppearanceHeadline6">@style/Headline6</item>
        <item name="textAppearanceBody2">@style/Body2</item>
        <item name="materialCardViewStyle">@style/AppCardView</item>
    </style>

    <style name="Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/libre_franklin_medium</item>
    </style>

    <style name="Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/libre_franklin_medium</item>
    </style>

    <style name="Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/libre_franklin_medium</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/libre_franklin_medium</item>
    </style>

    <style name="AppCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorOnSurfaceEmphasisMedium</item>
    </style>
</resources>
